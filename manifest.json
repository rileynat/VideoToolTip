{
    "manifest_version": 2,

    "name": "Video Tool Tip",
    "description": "This opens an embeded muted YouTube player when the user mouses over a YouTube link",
    "version": "1.0",

    "permissions": [
            "tabs", "http://www.youtube.com/","activeTab","browsingData"
    ],
    "content_security_policy": "script-src 'self' https://www.youtube.com/iframe_api https://s.ytimg.com/yts/jsbin/www-widgetapi-vfldKI4RW.js; object-src 'self'",
    "web_accessible_resources": [
    	"ytpopup.html",
    	"ytpopup.js"
  	],

    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],

            "js" : [ "jquery-1.10.2.js", "jquery-ui-1.10.2.js", "contentscript.js" ],
            "css" : [ "jquery-ui-1.10.2.css" ]
        }
    ]
}
        
